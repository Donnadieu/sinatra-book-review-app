<div class="header">
  <div class="profile">
    <p>
      <a href="/users/<%= current_user.slug %>">Profile</a>
    </p>
  </div>
  <div class="books-link">
    <p>
      <a href="/books">Books</a>
    </p>
  </div>
  <div class="auhtors-link">
    <p>
      <a href="/authors">Authors</a>
    </p>
  </div>
  <div class="reviews-link">
    <p>
      <a href="/reviews">Lastest Reviews</a>
    </p>
  </div>
  <div class="logout">
    <p>
      <a href="/logout">Logout</a>
    </p>
  </div>
</div>
<div class="author-container">
  <div class="author_name">
    <h1><%= @author.name %></h1>
  </div>
  <h3>Books:</h3>
  <div class="author_books">
    <% @author.books.each do |book| %>
    <div class="book_name">
      <a href="/books/<%= book.slug %>"><h4><%= book.name %></a></h4>
    </div>
    <% end %>
  </div>
</div>
